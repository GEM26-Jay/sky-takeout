<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >
<mapper namespace="com.sky.mapper.SetmealDishMapper">

    <select id="getGroupByDishIds" resultType="com.sky.entity.SetmealDish">
        select sd.id as id,
               sd.setmeal_id as setId,
               s.name as setName,
               sd.dish_id as dishId,
               sd.name as dishName,
               sd.price,
               sd.copies
        from setmeal_dish sd left join setmeal s on sd.setmeal_id = s.id
        <where>
            sd.dish_id in (
            <foreach collection="idArr" item="sub_id" separator=",">
                #{sub_id}
            </foreach>
            )
        </where>
    </select>

</mapper>
